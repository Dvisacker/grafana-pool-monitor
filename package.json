{
  "name": "pool-monitor",
  "version": "1.0.0",
  "description": "Monitor and track Uniswap/Curve pool reserves",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "tsx src/index.ts",
    "dev": "tsx watch src/index.ts",
    "migrate": "psql -d pool_monitor -U postgres -h localhost -f src/db/schema.sql",
    "generate": "wagmi generate",
    "setup": "docker compose up -d && npm run migrate",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "defi",
    "uniswap",
    "curve",
    "monitoring"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.1.0",
    "@types/pg": "^8.10.0",
    "@wagmi/cli": "latest",
    "date-fns": "^4.1.0",
    "dotenv": "^16.0.0",
    "kysely": "^0.27.5",
    "node-cron": "^3.0.3",
    "pg": "^8.11.0",
    "prisma-kysely": "^1.8.0",
    "ts-node": "^10.9.0",
    "viem": "^2.0.0",
    "wagmi": "latest"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@types/node-cron": "^3.0.11",
    "jest": "^29.7.0",
    "prisma": "^6.1.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
