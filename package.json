{
  "name": "pool-monitor",
  "version": "1.0.0",
  "description": "Monitor and track Uniswap/Curve pool reserves",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "tsx src/index.ts",
    "dev": "tsx watch src/index.ts",
    "migrate": "psql -d pool_monitor -U postgres -h localhost -f src/db/schema.sql",
    "generate": "wagmi generate",
    "setup": "docker compose up -d && npm run migrate"
  },
  "keywords": [
    "defi",
    "uniswap",
    "curve",
    "monitoring"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/pg": "^8.10.0",
    "@wagmi/cli": "latest",
    "dotenv": "^16.0.0",
    "pg": "^8.11.0",
    "ts-node": "^10.9.0",
    "viem": "^2.0.0",
    "wagmi": "latest"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}